<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/helpLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edinburgh.games.johnmichaelhenderson.testdots.HowToPlayActivity"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20dp"
        android:id="@+id/helpScoreTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/helpButton1"
        android:width="80dp"
        android:height="80dp"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_below="@+id/helpScoreTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/helpInstruction2TV"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_marginBottom="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/helpButton2"
        android:layout_below="@+id/helpInstruction2TV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="80dp"
        android:layout_marginLeft="5dp"
        android:textSize="25dp"
        android:height="80dp"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/helpButton3"
        android:width="80dp"
        android:layout_below="@+id/helpButton1"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:height="80dp"
        android:textColor="@color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/helpButton4"
        android:layout_below="@+id/helpButton2"
        android:textSize="25dp"
        android:height="80dp"
        android:width="80dp"
        android:textColor="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/helpButton5"
        android:layout_below="@+id/helpButton4"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:height="80dp"
        android:width="80dp"
        android:textColor="@color/white"/>


</RelativeLayout>
